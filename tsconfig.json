{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}
